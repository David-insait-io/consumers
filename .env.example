# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9094
KAFKA_TOPIC=simulation-events
KAFKA_CONSUMER_GROUP=simulation-consumer-group

# Consumer Configuration
CONCURRENT_CONVERSATIONS=20
LLM_RATE_LIMIT_RPS=10
MAX_ITERATIONS=10
CONVERSATION_TIMEOUT=300

# Agent Backend Configuration
AGENT_URL=http://test-company.insait.com
AGENT_PORT=5000
AGENT_JWT_TOKEN=your-jwt-token-here
CHATBOT_TIMEOUT=30

# Results Callback API (currently saves to local file)
RESULTS_CALLBACK_URL=http://localhost:8080/simulations/results

# ============================================================================
# LLM Configuration for Persona Response Generation
# ============================================================================

# Model to use (see formats below)
PERSONA_LLM_MODEL=azure/gpt-5-chat

# --- Option 1: Azure OpenAI ---
# Model format: azure/<deployment-name>
# Example: azure/gpt-5-chat
OPENAI_API_KEY=your-azure-api-key
OPENAI_API_BASE=https://insait-io.openai.azure.com/
OPENAI_API_VERSION=2025-01-01-preview

# --- Option 2: Standard OpenAI ---
# Model format: gpt-4, gpt-3.5-turbo
# LLM_API_KEY=sk-your-openai-key
# PERSONA_LLM_MODEL=gpt-4

# --- Option 3: Anthropic ---
# Model format: claude-3-opus-20240229
# LLM_API_KEY=your-anthropic-key
# PERSONA_LLM_MODEL=claude-3-opus-20240229

# LLM Timeout and Retries
LLM_TIMEOUT=30
LLM_RETRY_ATTEMPTS=3
